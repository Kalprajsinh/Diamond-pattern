#include<iostream>
using namespace std;

int main()
{
    int n;
    cin>>n;
    for(int i=0 ; i<n ; i++)
    {    
        int g;
        g = i;
        for(int j=0 ; j<=i ; j++)
        {
           if(g==i)
           {
           for(int k=0 ; k<=n-2-i ; k++)
           { cout<<" ";}
           g++;
           }
            cout<<" *";
        }
        cout<<endl; 
    }
    
   for(int i=0 ; i<n ; i++)
   {
         int h;
         h = i;
        for(int j=n-1 ; j>i ; j--)
        {
           if(h==i)
           {
           for(int k=0 ; k<=i ; k++)
           { cout<<" ";}
           h++;
           }
          cout<<" *";
        }
        cout<<endl;
   }
    return 0;
}
